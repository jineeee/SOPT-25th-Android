<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/white_square_shadow"
    android:layout_width="304dp"
    android:layout_height="138dp">


    <ImageView
        android:id="@+id/homeTaste_img_book"
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:layout_margin="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/book_img" />

    <TextView
        android:id="@+id/homeTaste_txt_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="#222222"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/gothic_080"
        android:text="홀라크러시"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/homeTaste_img_book"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homeTaste_txt_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        android:text="브라이언 J. 로버트슨 저/김도현..."
        android:fontFamily="@font/gothic_060"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/homeTaste_img_book"
        app:layout_constraintTop_toBottomOf="@+id/homeTaste_txt_book" />

    <RatingBar
        android:id="@+id/homeTaste_ratingbar"
        style="@style/starRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="104dp"
        android:layout_marginTop="100dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:numStars="5"
        android:rating="4.1"
        android:soundEffectsEnabled="true"
        android:stepSize="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homeTaste_txt_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginTop="102dp"
        android:fontFamily="@font/gothic_060"
        android:text="4.1 (23명)"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/homeTaste_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/checkbox_drawable"
        android:button="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>